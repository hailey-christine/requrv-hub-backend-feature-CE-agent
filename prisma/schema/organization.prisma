model Organization {
    id             String  @id @default(uuid()) @db.Uuid
    name           String
    email          String  @unique
    team_key       String? @unique
    availableUsers Int     @default(0)
    vatNumber      String  @unique
    address        String
    city           String
    zipCode        String
    country        String? @default("Italia")
    fiscalCode     String?
    sdi            String?
    pec            String?

    //DETAILS
    vision        String?
    mission       String?
    productType   String?
    toneOfVoice   String?
    income        String?
    goals         String?
    longTermGoals String?

    //RELATION
    users         User[]         @relation(name: "users")
    owner         User           @relation(name: "owner", fields: [ownerId], references: [id])
    ownerId       String         @unique @db.Uuid
    prompts       Prompt[]
    providers     Provider[]
    subscriptions Subscription[]
    areas         Area[]
    collections   Collection[]
    langfuse      Langfuse?
    vectorDb      VectorDb?
    incomeStatement IncomeStatement[]
    documents     Document[]
    incomeStatementConversionTable IncomeStatementConversionTable[]

    //AUTOGENERATED
    createdAt DateTime @default(now()) @db.Timestamp()
    updatedAt DateTime @updatedAt @db.Timestamp()
}
